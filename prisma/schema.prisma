// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String?
  role         String
  refreshToken String?
  name         String?
  provider     String?
  providerId   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  newCol       String?
}

model Otp {
  id        String   @id @default(uuid())
  email     String   @unique
  otp       String
  expiresAt DateTime
}

model Token {
id        String   @id @default(uuid())
name      String
}

